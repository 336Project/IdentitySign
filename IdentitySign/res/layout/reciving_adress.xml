<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <ListView
        android:id="@+id/country_lvcountry"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="80dp"
        android:divider="@null"
        android:scrollbars="none" >
    </ListView>
    
    <com.ateam.identity.sign.widget.phonelist2.SideBar
        android:id="@+id/sidrbar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="80dp"
        android:background="#00000000" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center"
        android:background="@drawable/sidebar_dialog_background"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30.0dip"
        android:layout_marginBottom="80dp"
        android:visibility="gone" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_time"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2015-10-14 12:12:12"
            android:textSize="20sp"/>
        <TextView 
            android:id="@+id/tv_showDate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/iv_go_pallet_time"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button 
            android:id="@+id/btn_signin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/btn_login_selector"
            android:text="签到"/>
    </LinearLayout>

</FrameLayout>