<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wxid_hcq"
    android:gravity="center"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="@dimen/login_loginbox_width"
        android:layout_height="@dimen/login_loginbox_height"
        android:background="@drawable/login_loginbox"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_loginedittext"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:singleLine="true"
                android:hint="账号"
                android:textColorHint="#a79b9f"
                android:textColor="@color/color_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/login_check_textSize" >
                <requestFocus />
            </EditText>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/login_username_picture" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#DED6D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_loginedittext"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColorHint="#a79b9f"
                android:textColor="@color/color_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/login_check_textSize" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/login_password_picture" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/br_login"
        android:layout_width="@dimen/login_loginbox_width"
        android:layout_height="@dimen/login_loginbox_height2"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/login_login_marginTop"
        android:background="@drawable/btn_login_selector"
        android:gravity="center" />

</LinearLayout>